{
    "app-id": "com.github.alainm23.arcade",
    "base": "io.elementary.BaseApp",
    "base-version": "juno-19.08",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.alainm23.arcade",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--socket=pulseaudio"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name" : "libevdev",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.freedesktop.org/libevdev/libevdev.git",
                    "tag" : "libevdev-1.8.0",
                    "commit" : "779749b22c0dd62cadf9e147c97c5a7675a92478"
                }
            ]
        },
        {
            "name" : "manette",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dgudev=disabled"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/aplazas/libmanette.git",
                    "tag" : "0.2.3",
                    "commit" : "8aacdcbcbf37d0e48a04ffc7dde11acb50ee628b"
                }
            ]
        },
        {
            "name" : "retro-gtk",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/retro-gtk.git",
                    "tag" : "0.18.0",
                    "commit" : "62183dc603184c9ac4b895b0146b27f363140421"
                }
            ]
        },
        {
            "name": "arcade",
            "buildsystem": "meson",
            "build-options": {
                "config-opts": [
                    "--buildtype=release"
                ]
            },
            "sources": [{
                "type": "git",
                "url": "https://github.com/alainm23/arcade.git"
            }]
        }
    ]
}
